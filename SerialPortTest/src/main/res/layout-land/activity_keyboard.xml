<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joesmate.a21.serial_port_test.KeyboardActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:elevation="0dp"
        android:onClick="onActiveWKey"
        android:text="激活工作密钥"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        tools:text="激活工作密钥"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="onDownWkey"
        android:text="更新工作密钥"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button5"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onDownMkey"
        android:text="更新主密钥"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="onGetCryPw"
        android:text="获取PIN(密文)"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="onGetEnPw"
        android:text="获取PIN(明文)"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onRestDefaultKey"
        android:text="键盘初始化"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="107dp"
        android:layout_height="23dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="23dp"
        android:text="工作密钥："
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/txtZMK"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="89dp"
        android:layout_height="26dp"
        android:layout_marginTop="34dp"
        android:text="主密钥："
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editText4"
        android:layout_marginRight="8dp"/>

    <EditText
        android:id="@+id/txtZMK"
        android:layout_width="426dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="02F9CF92E768BB78A1269C76E8D665F5"
        tools:text="02F9CF92E768BB78A1269C76E8D665F5"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        android:layout_marginRight="8dp"/>

    <EditText
        android:id="@+id/txtZWK"
        android:layout_width="426dp"
        android:layout_height="40dp"
        android:layout_marginTop="-2dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="174AEC290E7BB5EBD92FFECCD54E42FF"
        app:layout_constraintTop_toBottomOf="@+id/txtZMK"
        tools:text="174AEC290E7BB5EBD92FFECCD54E42FF"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="17dp"
        android:text="加密后工作密钥："
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/txtZWK"
        android:layout_marginRight="7dp"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="424dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="52590DAA3696305A512E5AF3AB807DA7"
        tools:text="52590DAA3696305A512E5AF3AB807DA7"
        tools:layout_editor_absoluteY="34dp"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginRight="9dp"
        />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="783dp"
        android:layout_height="113dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="286dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="消息："
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtInfo"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
